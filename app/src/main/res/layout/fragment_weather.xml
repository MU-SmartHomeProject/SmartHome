<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00EAFF"
    tools:context=".WeatherFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/todayTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0°C"
            android:textColor="#FFFFFF"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/todayTemperatureFeelLike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feel like"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/todayTemperatureMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Min"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/todayTemperatureMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/todayMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main"
            android:text="0 °C"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />


        <TextView
            android:id="@+id/todayDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"/>

        <TextView
            android:id="@+id/todayPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pressure: 0 hpa"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/todayHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity: 0 %"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/todayWindSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wind: 0 m/s"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/todayWindRotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wind: 0 m/s"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/todaySunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunrise: 00:00"

            android:id="@+id/todaySunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>